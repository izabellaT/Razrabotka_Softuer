<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkateApp</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/logo.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:purple"><img src="~/images/logo.jpg" alt="logo" width="25%" height="25%">Fast Wheels</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <div class="dropdown show">
                                    <a class="nav-link active dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: purple">
                                        Skateboards
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <img src="~/images/R.jpg" alt="boards" style="width:100%; height:100%;" />
                                        <a class="dropdown-item text-center" href="/Skateboards/All" style="color:forestgreen">Skateboards</a>

                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <a class="dropdown-item text-center" href="/Skateboards/Create" style="color:forestgreen">Create Skateboard</a>
                                        }
                                    </div>
                                </div>
                            </li>
                        }
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <div class="dropdown show">
                                    <a class="nav-link active dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color: purple">
                                        Accessories
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <img src="~/images/R.png" alt="boards" style="width:100%; height:100%;" />
                                        <a class="dropdown-item text-center" href="/Accessories/All" style="color:forestgreen">Accessories</a>

                                        @if (User.IsInRole("Administrator"))
                                        {
                                            <a class="dropdown-item text-center" href="/Accessories/Create" style="color:forestgreen">Create Accessorie</a>

                                <li class="nav-item">
                                    <a class="nav-link " style="color:forestgreen" asp-controller="Orders" asp-action="Index">Orders</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link " style="color:forestgreen" asp-controller="SkateboardUsers" asp-action="Index">Users</a>
                                </li>
                            }
                                        <li class="nav-item">
                                            <a class="nav-link " style="color:purple" asp-controller="Skateboards" asp-action="AboutUs">About us</a>
                                        </li>
</div>
                            </div>
                            
                            </li>
                        }
                        </ul>
                        <partial name="_LoginPartial" />
                        </div>
                        </div>
                    </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
