@model MovieWebAppStaj.Domain.MovieActor

@{
    ViewData["Title"] = "Edit";
}

<h1 class=" text-center " style="color:goldenrod">Create new movie-actor</h1>

<hr />
<div class="row text-center font-weight-bold" style="color:maroon; margin: auto; width: 100%; padding-left: 450px;">
    <div class="col-md-4">
        <form asp-action="Create" style="background-color:wheat; border-radius:20px; padding:10px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label"></label>
                <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ActorId" class="control-label"></label>
                <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="color:maroon; background-color:goldenrod; border-color:goldenrod"/>
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" style="color:goldenrod">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
