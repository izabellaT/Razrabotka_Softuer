@model IEnumerable<MovieWebAppStaj.Domain.MovieActor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center" style="color: maroon; background-color: goldenrod; padding: 5px;">Movie-actors</h1>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 20px;
    }

    #myBtn {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 30px;
        z-index: 99;
        font-size: 18px;
        border: none;
        outline: none;
        background-color: red;
        color: white;
        cursor: pointer;
        padding: 15px;
        border-radius: 4px;
    }

        #myBtn:hover {
            background-color: #555;
        }
</style>
<body>

    <button onclick="topFunction()" id="myBtn" title="Go to top" style="background-color:goldenrod; outline-color:goldenrod; color:maroon">Top</button>

    <script>
        let mybutton = document.getElementById("myBtn");
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                mybutton.style.display = "block";
            } else {
                mybutton.style.display = "none";
            }
        }
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>

</body>

<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <div style="float:left; margin:10px; width: 250px" class="text-center">

                <div class="font-weight-bold" style="color:maroon">
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </div>
                <div class="font-weight-bold" style="color:goldenrod">
                    @Html.DisplayFor(modelItem => item.Actor.FirstName)
                </div>
                <div class="font-weight-bold" style="color:goldenrod">
                    @Html.DisplayFor(modelItem => item.Actor.LastName)
                </div>
                <img src="@Html.DisplayFor(modelItem => item.Movie.Image)" alt="Image" width="120" height="200" style="border-width: 2px; border-color: goldenrod; border-style: solid; border-radius:15px" />
                <img src="@Html.DisplayFor(modelItem => item.Actor.Image)" alt="Image" width="120" height="200" style="border-width: 2px; border-color: goldenrod; border-style: solid; border-radius:15px" />

                @if (this.User.IsInRole("Administrator"))
                {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color:maroon">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color:maroon">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color:maroon">Delete</a>
                </td>
            }
                </div>
            </tr>
        }
</tbody>
