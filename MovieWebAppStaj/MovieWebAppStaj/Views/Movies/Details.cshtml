@model MovieWebAppStaj.Domain.Movie

@{
    ViewData["Title"] = "Details";
}

<h1 class=" text-center " style="color:goldenrod">@Html.DisplayFor(model => model.Title)</h1>

<div class="text-center">
    <hr />
    <dl class="row text-center" style="color:maroon">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Image)" alt="Image" width="300px" height="400px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Trailer
        </dt>
        <dd class="col-sm-10">
            <iframe width="560" height="315" src="@Html.DisplayFor(model => model.Code)" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        </dd>
    </dl>
</div>
<div class="text-center" style="color:maroon"> 
    <a asp-action="Index"style="color:goldenrod">Back to List</a>
</div>
